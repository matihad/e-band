<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_7sdp">

    <!-- texts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--header texts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:textColor="#302D2D"
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#302D2D"
                android:id="@+id/txt_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />


            <TextView
                android:textColor="#302D2D"
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <TextView
            android:textColor="#302D2D"
            android:id="@+id/txt_heart_beat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:textColor="#302D2D"
            android:id="@+id/txt_blood_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />


    </LinearLayout>

    <!-- image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_76sdp"
            android:layout_height="@dimen/_76sdp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:riv_border_color="#333333"
            app:riv_border_width="3dip"
            app:riv_corner_radius_bottom_left="60dp"
            app:riv_corner_radius_bottom_right="60dp"
            app:riv_corner_radius_top_left="60dp"
            app:riv_corner_radius_top_right="60dp"
            android:src="@drawable/image_profile"
            app:riv_mutate_background="true"
            app:riv_tile_mode_x="clamp"
            android:layout_marginStart="@dimen/_6sdp"
            android:id="@+id/profile_pic_listview"
            />

    </LinearLayout>

</LinearLayout>